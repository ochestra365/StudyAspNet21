@model MyPortpolioWeb.Models.Manages

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<script src="~/plugin/ckeditor/ckeditor.js"></script>
<div class="col-lg col-md ml-auto mr-auto">
    <div class="card card-login">
        <div class="section section-contacts">
            <div class="row">
                <div class="col-md-11 ml-auto mr-auto">
                    <h3 class="text-center title" style="color:black">Manages</h3>
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Category" class="control-label">구분</label>
                            <select asp-for="Category" class="form-control">
                                <option>Choice</option>
                                <option value="Index">Index</option>
                                <option value="Profile">Index</option>
                                <option value="Portfolio">Portfolio</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Subject" class="control-label">제목</label>
                            <textarea asp-for="Subject" id="EditorContent" class="form-control"></textarea>
                            <script>CKEDITOR.replace("EditorContents");</script>
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Contents" class="control-label">내용</label>
                            <textarea asp-for="Contents" id="EditorContent" class="form-control"></textarea>
                            <script>
                                var editor = CKEDITOR.replace("EditorContents");
                                editor.config.allowedContent = true;// div 태그 허용
                                editor.config.extraAllowedContent = 'a(*)';
                            </script>
                            <span asp-validation-for="Contents" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="RegDate" class="control-label">등록일</label>
                            <input asp-for="RegDate" class="form-control" />
                            <span asp-validation-for="RegDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-success">List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>